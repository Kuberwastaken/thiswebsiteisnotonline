{
  "functions": {
    "api/[...path].js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/robots.txt",
      "destination": "/api/robots.txt"
    },
    {
      "source": "/sitemap.xml", 
      "destination": "/api/sitemap.xml"
    },
    {
      "source": "/stats",
      "destination": "/api/stats"
    },
    {
      "source": "/((?!api|_next|favicon.ico).*)",
      "destination": "/api/$1"
    }
  ]
}